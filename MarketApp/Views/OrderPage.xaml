<Page x:Class="MarketApp.Views.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarketApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <Grid Background="White">
        <DockPanel LastChildFill="False">
            <DataGrid x:Name="dgOrders" ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder, Mode=TwoWay}" AutoGenerateColumns="False" 
              Margin="10,10,300,225" Width="477">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding OrderId}"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding OrderDate}"/>
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer.FirstName}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Page>
